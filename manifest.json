{
    "manifest_version": 3,
    "name": "Zalo Extension",
    "version": "1.0.0",
    "description": "Extension zalo support user",
    "action": {
        "default_popup": "",
        "default_icon": "icons/logo.png"
    },
    "icons": {
        "16": "icons/logo.png",
        "32": "icons/logo.png",
        "48": "icons/logo.png",
        "128": "icons/logo.png"
    },
    "background": {
        "service_worker": "js/background.js"
    },
    "permissions": [
        "storage",
        "cookies",      
        "clipboardWrite",
        "activeTab",
        "notifications",
        "search",
        "scripting",
        "tabs",
        "alarms",
        "contextMenus",
        "webRequest"       
    ],
    "host_permissions": ["<all_urls>"], 

    "content_scripts": [
        {
            "matches": ["*://chat.zalo.me/*"],
            "js": [
              "js/jquery-3.1.1.min.js",            
              "js/content.js"
            ],
            "css": [           
              "css/style.css"
            ]
          },
          {
            "matches": ["*://id.zalo.me/*"],
            "js": [
              "js/jquery-3.1.1.min.js",
              "js/toastr.min.js",
              "js/notify.min.js",
              "js/content_login.js"
            ],
            "css": [
              "css/toastr.min.css"              
            ]
          }
        
    ],   
    "web_accessible_resources": [
        {
          "resources": ["page/login.html", "page/popup.html"],
          "matches": ["*://chat.zalo.me/*", "*://id.zalo.me/*"]
        }
      ],
   
    "incognito": "split",
    "content_security_policy":{
      "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "options_ui": {
        "page": "page/options.html",
        "open_in_tab": true
    },
      "externally_connectable": {  
        "matches": ["*://chat.zalo.me/*", "*://id.zalo.me/*"]
    }
      
}